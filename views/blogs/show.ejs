<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div class="row">
    <!-- Blog Content -->
    <div class="col-lg-9">
      <div class="card shadow-lg border-0 mb-4 rounded-4 blog-card">
        <% if (blog.image && blog.image.url) { %>
          <img src="<%= blog.image.url %>" 
               class="card-img-top rounded-top-4" 
               style="max-height:400px; object-fit:cover;" 
               alt="<%= blog.title %>">
        <% } %>

        <div class="card-body p-4">
          <!-- Title -->
          <h2 class="card-title mb-3 text-primary fw-bold"><%= blog.title %></h2>

          <!-- Meta -->
          <p class="text-muted mb-3 small">
            ‚úç By <strong class="text-dark"><%= blog.author %></strong> | 
            üåç <%= blog.country %> | 
            üìÖ <%= blog.createdAt.toDateString() %>
          </p>

          <!-- Tags -->
          <div class="mb-3">
            <% if (blog.tags && blog.tags.length > 0) { %>
              <% blog.tags.forEach(tag => { %>
                <span class="badge bg-primary me-1 shadow-sm"><%= tag %></span>
              <% }) %>
            <% } %>
          </div>

          <!-- Head Content -->
          <p class="lead"><%= blog.headContent %></p>

          <!-- Content -->
          <p style="white-space: pre-line;"><%= blog.content %></p>

          <!-- Owner Controls -->
          <% if (currUser && blog.owner && (currUser._id.toString() === blog.owner._id.toString() || currUser._id.toString() === ADMIN_ID)) { %>
            <div class="d-flex justify-content-end gap-2 mt-4">
              <a href="/blogs/<%= blog._id %>/edit" class="btn btn-sm btn-outline-warning">
                <i class="fa-solid fa-pen-to-square me-1"></i>Edit
              </a>
              <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger">
                  <i class="fa-solid fa-trash me-1"></i>Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Prev / Next navigation -->
      <div class="d-flex justify-content-between align-items-center mt-4">
        <% if (prevBlog) { %>
          <a href="/blogs/<%= prevBlog._id %>" class="btn btn-outline-primary shadow-sm">
            ‚¨Ö Previous: <%= prevBlog.title %>
          </a>
        <% } else { %>
          <span></span>
        <% } %>

        <% if (nextBlog) { %>
          <a href="/blogs/<%= nextBlog._id %>" class="btn btn-outline-primary shadow-sm">
            Next: <%= nextBlog.title %> ‚û°
          </a>
        <% } %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-3 d-none d-lg-block">
      <h6 class="fw-bold mb-3 text-primary">üìñ More Articles</h6>
      <% blogs.slice(0, 6).forEach(b => { if (b._id.toString() !== blog._id.toString()) { %>
        <div class="card mb-3 shadow-sm border-0 sidebar-card rounded-3">
          <% if (b.image && b.image.url) { %>
            <img src="<%= b.image.url %>" 
                 class="card-img-top rounded-top-3" 
                 style="height:100px; object-fit:cover;" 
                 alt="<%= b.title %>">
          <% } %>
          <div class="card-body p-2">
            <h6 class="card-title mb-1">
              <a href="/blogs/<%= b._id %>" class="text-decoration-none text-dark sidebar-link">
                <%= b.title %>
              </a>
            </h6>
            <small class="text-muted">
              ‚úç <%= b.author %>
            </small>
          </div>
        </div>
      <% } }) %>
    </div>
  </div>
</div>

<!-- Review Form -->
<% if(currUser) { %>
  <div class="card mb-4 p-3 shadow-sm rounded-4">
    <div class="card-body">
      <h4 class="card-title text-primary">Leave a Review</h4>
      <form action="/blogs/<%= blog._id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="rating" class="form-label">‚≠ê Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="3" checked />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label fw-bold">üí¨ Add Your Review</label>
          <textarea 
            name="review[comment]" 
            id="comment" 
            rows="3" 
            class="form-control" 
            placeholder="Share your experience..." 
            required></textarea>
          <div class="invalid-feedback">Please add some comment.</div>
        </div>
        <button class="btn btn-primary w-100">Submit Review</button>
      </form>
    </div>
  </div>
<% } %>

<!-- Reviews Section -->
<div class="reviews-section mt-4">
  <h4 class="text-center fw-bold mb-3 text-primary">‚≠ê Reviews</h4>
  <hr class="mb-4">

  <% if (blog.reviews.length === 0) { %>
    <p class="text-muted text-center fst-italic">‚ú® Be the first one to add a review!</p>
  <% } else { %>
    <div class="row g-3">
      <% for (let review of blog.reviews) { %>
        <div class="col-12 col-lg-6">
          <div class="card shadow-sm rounded-4 border-0 review-card">
            <div class="card-body p-3">
              <!-- Reviewer Info -->
              <div class="d-flex align-items-center mb-2">
                <i class="fa-solid fa-user-circle fa-2x text-primary me-2"></i>
                <h6 class="card-subtitle mb-0 text-dark fw-semibold"><%= review.author.username %></h6>
              </div>

              <!-- Rating -->
              <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>

              <!-- Comment -->
              <p class="card-text mt-1"><%= review.comment %></p>

              <!-- Delete Option -->
              <% if (currUser && currUser.username === review.author.username) { %>
              <form method="post" action="/blogs/<%= blog._id %>/reviews/<%= review._id %>?_method=DELETE" class="mt-2 text-end">
                <button class="btn btn-sm btn-outline-danger">
                  <i class="fa-solid fa-trash-can me-1"></i> Delete
                </button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<style>
  body {
    background: linear-gradient(135deg, #f0f7ff, #e8f0ff);
  }
  .blog-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .blog-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }
  .sidebar-card {
    transition: transform 0.2s;
  }
  .sidebar-card:hover {
    transform: translateX(4px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
  }
  .sidebar-link:hover {
    color: #0d6efd !important;
  }
  .review-card {
    background-color: #f9fcff;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .review-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
  }
  .starability-result {
    font-size: 1rem;
    color: #0d6efd;
  }
</style>
