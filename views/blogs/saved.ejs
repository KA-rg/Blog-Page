<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <h3 class="section-title mb-4">üíæ Saved Blogs</h3>
  <div class="row g-4 row-cols-lg-4 row-cols-md-2 row-cols-1">
    <% blogs.forEach(blog => { %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0 rounded-4">

          <!-- Blog Image -->
          <a href="/blogs/<%= blog._id %>" class="text-decoration-none text-dark">
            <% if (blog.image) { %>
              <img src="<%= blog.image.url %>" class="card-img-top" alt="<%= blog.title %>">
            <% } else { %>
              <div class="card-img-placeholder"></div>
            <% } %>
            <div class="card-body">
              <h6 class="card-title fw-bold"><%= blog.title %></h6>
              <p class="card-text text-muted small mb-3"><%= blog.headContent %></p>
            </div>
          </a>

          <!-- Card Footer -->
          <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
            <!-- Like Button -->
            <button class="btn btn-sm btn-outline-danger like-btn" data-id="<%= blog._id %>">
              <span class="heart">
                <% if (currUser && blog.likedBy && blog.likedBy.some(id => id.toString() === currUser._id.toString())) { %>
                  ‚ù§Ô∏è
                <% } else { %>
                  ü§ç
                <% } %>
              </span>
              <span class="like-count"><%= blog.likes %></span>
            </button>

            <!-- Dropdown Options -->
            <div class="dropdown more-options">
              <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                ‚ãÆ
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <button 
                    class="dropdown-item save-btn" 
                    data-id="<%= blog._id %>" 
                    data-saved="true">
                    ‚úÖ Saved
                  </button>
                </li>
                <li>
                  <button class="dropdown-item share-btn" data-id="<%= blog._id %>">
                    üì§ Share
                  </button>
                </li>
                <li>
                  <a class="dropdown-item" href="/blogs/<%= blog._id %>">
                    üîé View Blog
                  </a>
                </li>
              </ul>
            </div>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>



<!-- Custom Styling -->
<style>
/* Like Count Badge for Suggestions */
.like-badge {
  position: absolute;
  bottom: 10px;
  right: 10px;
  background: #fff;
  border: 1px solid #0466c8;
  color: #0466c8;
  font-size: 0.85rem;
  font-weight: 500;
  border-radius: 20px;
  padding: 3px 10px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  pointer-events: none; /* makes it non-clickable */
}

  
/* Back Button */
.btn-outline-accent {
  border: 1px solid #0466c8;
  color: #0466c8;
  background: transparent;
  transition: 0.2s ease;
}
.btn-outline-accent:hover {
  background: #0466c8;
  color: #fff;
}

/* Like Button (outlined look) */
.like-btn {
  position: absolute;
  bottom: 10px;
  left: 10px;
  font-size: 0.9rem;
  border: 1px solid #0466c8;
  color: #0466c8;
  background: #fff;
  border-radius: 20px;
  padding: 4px 10px;
  cursor: pointer;
  transition: 0.2s ease;
}
.like-btn:hover {
  background: #0466c8;
  color: #fff;
}

/* Dropdown Menu */
.more-options {
  position: absolute;
  top: 10px;
  right: 10px;
}
.more-options .btn {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  padding: 3px 7px;
  font-weight: bold;
}

/* Card Placeholder */
.card-img-placeholder {
  height: 180px;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaa;
  font-size: 0.9rem;
  border-bottom: 1px solid #ddd;
}

/* Text Truncation */
.text-truncate {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  // ----- SAVE/UNSAVE TOGGLE -----
  document.querySelectorAll(".save-btn").forEach(btn => {
    btn.addEventListener("click", async () => {
      const blogId = btn.dataset.id;
      const blogCard = btn.closest(".col"); // find the parent card

      try {
        const res = await fetch(`/blogs/${blogId}/save`, {
          method: "POST",
          headers: { "Content-Type": "application/json" }
        });

        const data = await res.json();

        if (data.saved) {
          btn.textContent = "‚úÖ Saved";
          btn.dataset.saved = "true";
        } else {
          // Remove blog card from the Saved page instantly
          blogCard.remove();

          // If no blogs left, show fallback message
          if (document.querySelectorAll(".col").length === 0) {
            document.querySelector(".saved-container").innerHTML = `
              <div class="text-center p-5">
                <h4 class="text-muted">You haven‚Äôt saved any blogs yet!</h4>
                <a href="/blogs" class="btn btn-primary mt-3">Browse Blogs</a>
              </div>
            `;
          }
        }
      } catch (err) {
        console.error("Save toggle error:", err);
        alert("‚ùå Failed to update save status.");
      }
    });
  });
});

// ----- SHARE BUTTON -----
document.querySelectorAll(".share-btn").forEach(btn => {
  btn.addEventListener("click", async () => {
    const blogId = btn.dataset.id; // <-- use data-id
    const url = `${window.location.origin}/blogs/${blogId}`;

    if (navigator.share) {
      try {
        await navigator.share({ 
          title: "Check out this blog!", 
          url 
        });
      } catch (err) {
        console.log("Share cancelled", err);
      }
    } else {
      try {
        await navigator.clipboard.writeText(url);
        alert("üìã Blog link copied to clipboard!");
      } catch (err) {
        alert("‚ùå Failed to copy link.");
      }
    }
  });
});
</script>
