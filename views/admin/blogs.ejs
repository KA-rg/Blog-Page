<% layout('layouts/boilerplate') %>

<style>
  .stat-card {
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .stat-card:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
  }
  .stat-card.total:hover { box-shadow: 0 0 20px rgba(13, 110, 253, 0.5); }
  .stat-card.pending:hover { box-shadow: 0 0 20px rgba(255, 193, 7, 0.6); }
  .stat-card.approved:hover { box-shadow: 0 0 20px rgba(25, 135, 84, 0.6); }
  .stat-card.rejected:hover { box-shadow: 0 0 20px rgba(220, 53, 69, 0.6); }
</style>

<div class="container my-5">
  <h2 class="fw-bold mb-4">Admin Blog Dashboard</h2>

  <!-- Stats -->
  <div class="row g-4 mb-5 text-center">
    <div class="col-md-3 col-sm-6">
      <div class="card stat-card total border-0 shadow-sm rounded-4 p-3" onclick="filterBlogs('all')">
        <h6 class="text-primary">Total Blogs</h6>
        <h3><%= totalBlogs %></h3>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="card stat-card pending border-0 shadow-sm rounded-4 p-3" onclick="filterBlogs('pending')">
        <h6 class="text-warning">Pending</h6>
        <h3><%= pendingBlogs %></h3>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="card stat-card approved border-0 shadow-sm rounded-4 p-3" onclick="filterBlogs('approved')">
        <h6 class="text-success">Approved</h6>
        <h3><%= approvedBlogs %></h3>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="card stat-card rejected border-0 shadow-sm rounded-4 p-3" onclick="filterBlogs('rejected')">
        <h6 class="text-danger">Rejected</h6>
        <h3><%= rejectedBlogs %></h3>
      </div>
    </div>
  </div>

  <!-- Blog Table -->
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark text-center">
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Author</th>
          <th>Status</th>
          <th>Views</th>
          <th>Likes</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="blogTableBody">
        <% blogs.forEach((b, index) => { %>
          <tr class="text-center" data-status="<%= b.status %>">
            <td><%= index + 1 %></td>
            <td>
              <a href="/blogs/<%= b._id %>" class="fw-bold text-dark text-decoration-none">
                <%= b.title %>
              </a>
            </td>
            <td><%= b.owner ? b.owner.username : (b.author || "Unknown") %></td>
            <td>
              <% if (b.status === "pending") { %>
                <span class="badge bg-warning text-dark">Pending</span>
              <% } else if (b.status === "approved") { %>
                <span class="badge bg-success">Approved</span>
              <% } else { %>
                <span class="badge bg-danger">Rejected</span>
              <% } %>
            </td>
            <td><%= b.views %></td>
            <td><%= b.likes %></td>
            <td>
              <% if (b.status === "approved") { %>
                <form action="/admin/blogs/<%= b._id %>/undoApprove" method="POST" class="d-inline" onsubmit="return confirm('Undo approve this blog?');">
                  <button class="badge btn btn-success">Undo Approve</button>
                </form>
              <% } %>

              <% if (b.status === "rejected") { %>
                <form action="/admin/blogs/<%= b._id %>/undoReject" method="POST" class="d-inline" onsubmit="return confirm('Undo reject this blog?');">
                  <button class="badge btn btn-danger">Undo Reject</button>
                </form>
                <form action="/admin/blogs/<%= b._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this blog permanently?');">
                  <button class="badge btn btn-outline-danger btn-danger">Delete Blog</button>
                </form>
              <% } %>
              <% if (b.status === "pending") { %>
                <form action="/admin/blogs/<%= b._id %>/approve" method="POST" class="d-inline" onsubmit="return confirm('Approve this blog?');">
                  <button class="badge btn btn-success">Approve</button>
                </form>
                <button class="badge btn btn-danger reject-btn" data-id="<%= b._id %>" data-title="<%= b.title %>">Reject</button>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Reject Confirmation Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">Confirm Rejection</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p id="rejectModalMessage"></p>
        <form id="rejectForm" method="POST">
          <div class="d-flex justify-content-end mt-3">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Reject Blog</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // Reject modal logic
  document.querySelectorAll('.reject-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const blogId = btn.dataset.id;
      const title = btn.dataset.title;

      document.getElementById('rejectModalMessage').textContent =
        `Are you sure you want to reject the blog titled "${title}"?`;

      document.getElementById('rejectForm').action = `/admin/blogs/${blogId}/reject`;

      const modal = new bootstrap.Modal(document.getElementById('rejectModal'));
      modal.show();
    });
  });

  // Filter blogs
  function filterBlogs(status) {
    const rows = document.querySelectorAll("#blogTableBody tr");
    rows.forEach(row => {
      if (status === "all" || row.dataset.status === status) {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    });
  }
</script>
