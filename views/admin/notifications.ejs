<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <h2 class="mb-4">Admin Notifications</h2>

  <% if (notifications.length === 0) { %>
    <p class="text-muted">No notifications yet.</p>
  <% } else { %>
    <div class="d-flex justify-content-between mb-3">
      <form action="/admin/notifications/read-all" method="POST">
        <button class="btn btn-sm btn-primary">Mark All as Read</button>
      </form>
      <form action="/admin/notifications/delete-all" method="POST">
        <button class="btn btn-sm btn-danger">Delete All</button>
      </form>
    </div>

    <div class="list-group">
      <% notifications.forEach(notif => { %>
        <div class="list-group-item d-flex justify-content-between align-items-center 
                    <%= notif.read ? '' : 'bg-light fw-bold' %>">
          <div>
            <%= notif.message %>
            <br>
            <small class="text-muted"><%= notif.createdAt.toLocaleString() %></small>
          </div>
          <div class="d-flex gap-2">
            <% if (!notif.read) { %>
              <form action="/admin/notifications/<%= notif._id %>/read" method="POST">
                <button class="btn btn-sm btn-outline-success">Mark Read</button>
              </form>
            <% } %>
            <form action="/admin/notifications/<%= notif._id %>/delete" method="POST">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>