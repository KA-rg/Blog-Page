<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #f8f9fa;">
  <div class="col-md-5 col-lg-4">
    <div class="card shadow-lg rounded-4 border-0 p-4">
      <h2 class="text-center mb-4 fw-bold text-primary">Sign Up</h2>

      <form action="/signup" method="POST" class="needs-validation" novalidate>

        <!-- Username -->
        <div class="mb-3">
          <input
            name="username"
            id="username"
            type="text"
            class="form-control form-control-lg rounded-3"
            placeholder="Username"
            required
          />
          <div class="invalid-feedback">Please enter a username.</div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <input
            name="email"
            id="email"
            type="email"
            class="form-control form-control-lg rounded-3"
            placeholder="Email"
            required
          />
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <input
            name="password"
            id="password"
            type="password"
            class="form-control form-control-lg rounded-3"
            placeholder="Password"
            required
          />
          <div class="invalid-feedback">Please enter a password.</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 mb-3">
          Create Account
        </button>
      </form>

      <!-- Divider -->
      <hr class="my-3">

      <!-- Login Link -->
      <p class="text-center mb-0">
        Already have an account? <a href="/login" class="fw-semibold text-primary">Login</a>
      </p>
      <!-- Google Login Button -->
      <a href="/auth/google" class="btn btn-outline-danger btn-lg w-100 rounded-3 mb-2">
        <i class="bi bi-google"></i> Login with Google
      </a>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
