<% layout('layouts/boilerplate') %>

<style>
  body {
    background-color: #f8f9fa;
    font-family: "Poppins", sans-serif;
  }

  .card {
    border: none;
    transition: all 0.3s ease;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-radius: 1rem;
  }

  .btn-outline-danger {
    border-width: 1.8px;
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
  }

  .btn-outline-danger i {
    font-size: 1.1rem;
  }

  .btn-outline-danger:hover {
    background-color: #ea4335;
    color: white;
    box-shadow: 0 4px 12px rgba(234, 67, 53, 0.3);
    transform: translateY(-1px);
  }

  .btn-primary {
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(13, 110, 253, 0.3);
  }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-md-5 col-lg-4">
    <div class="card p-4 shadow-lg">
      <h2 class="text-center mb-4 fw-bold text-primary">Sign Up</h2>

      <!-- Email OTP Form -->
      <form action="/send-otp" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <input
            name="email"
            id="email"
            type="email"
            class="form-control form-control-lg rounded-3"
            placeholder="Enter your email"
            required
          />
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
          Send OTP
        </button>
      </form>

      <!-- Divider -->
      <hr class="my-3">
      <p class="text-center text-muted">or</p>

      <!-- Google Signup -->
      <a href="/auth/google" class="btn btn-outline-danger btn-lg w-100 rounded-3 mb-2">
        <i class="bi bi-google"></i>
        Sign Up with Google
      </a>

      <p class="text-center mt-3">
        Already have an account?
        <a href="/login" class="fw-semibold text-primary">Login</a>
      </p>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>